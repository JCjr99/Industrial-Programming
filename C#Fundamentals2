using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CsharpFundamentals_2
{
    class Tree
    {
        

        public void Insert( Node root, int ins)
        {
            Node newNode = new Node(ins);
            Node curr = root;
            Node prev = curr;

            while (curr != null)
            {
                if (ins < curr.value)
                {
                    prev = curr;
                    curr = curr.left;
                }
                else if(ins > curr.value)
                {
                    prev = curr;
                    curr = curr.right;
                }
            }

            if (ins < prev.value)
            {
                prev.left = newNode;
            }
            else
            {
                prev.right = newNode;
            }
        } 

        public Boolean search(Node root,int find)
        {
            if (root==null)
            {
                return false;
            }


            return true;
        }
        static void Main(string[] args)
        {

        }
    }

    class Node
    {
        public int value;
        public Node left;
        public Node right;

        public Node(int n)
        {
            this.left = null;
            this.right = null;
            this.value = n;
        }

    }

    
}
